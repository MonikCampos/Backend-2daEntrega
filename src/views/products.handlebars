<div>
    <h1>
        Segunda Pre-Entrega: MongoDB
    </h1>
    <h3>Listado de Productos</h3>
    <!--<input type="text" value="{{carrito._id}}" hidden id="carrito">-->
    <input type="text" value="6636716f3fbe2a682217b0ed" hidden id="carrito">
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Orden</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Code</th>
                <th>Status</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Thumbnail</th>
                <th><b>Cart</b></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{{this.description}}}</td>
                <td>{{{this.price}}}</td>
                <td>{{this.code}}</td>
                <td>{{this.status}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>{{this.brand}}</td> 
                <td>
                    {{#if this.thumbnail.length}}
                        <a href="{{thumbnail}}" target="_blank">{{this.thumbnail.[0]}}</a>
                    {{else}}
                    Without image
                    {{/if}}
                </td>
                <!--<td><button type="button" class="addToCart" data-id="{{this._id}}">Agregar</button></td>-->
                <td><button type="button" onclick="addToCart('{{_id}}')">Agregar</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script src="/js/products.js"></script>